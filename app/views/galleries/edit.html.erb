<h1><%= gallery.title %></h1>
<% if !gallery.images %>
    This gallery is empty. Fill it with your best slow loris photos!
<% else %>
  <% gallery.images.each do |i| %>
    <div class="col-lg-3 text-center">
      <%= link_to i, class: 'thumbnail' do %>
        <%= image_tag i.file.url(:thumb), class: 'img-responsive' %>
        <%= simple_format i.title, class: 'caption' %>
      <% end %>
    </div>
  <% end %>
  <%= simple_form_for gallery do |g| %>
    <%= g.input  :title %>
    <%= g.input  :description, as: :text %>
    <%= g.button :submit, 'Update Gallery', class: 'btn btn-primary' %>
    <%= g.button :submit, 'Delete Gallery', class: 'btn btn-danger' %>
  <% end %>
<% end %>
