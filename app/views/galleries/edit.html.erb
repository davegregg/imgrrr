<h1><%= gallery.title %></h1>
<% if !gallery.images %>
    This gallery is empty. Fill it with your best slow loris photos!
<% else %>
  <% gallery.images.each do |i| %>
    <div class="col-lg-3 text-center">
      <%= link_to i, class: 'thumbnail' do %>
        <%= image_tag i.file.url(:thumb), class: 'img-responsive' %>
        <%= simple_format i.title, class: 'caption' %>
        <%= simple_form_for gallery do |g| %>
          <%= g.button 'Edit', as: :submit, class: "btn btn-primary"%>
          <%= g.button 'Delete', as: :submit, class: "btn btn-danger"%>
        <% end %>
      <% end %>
    </div>
  <% end %>
<% end %>
